   "source": [
    "def sample_games(n):\n",
    "    us = [r() for i in range(0,n)]\n",
    "    ws = [r()+r()+r() if u >= 1/3 else r()+r() for u in us]\n",
    "    wins = sum([1 if w <= 2 else 0 for w in ws])\n",
    "    return wins/n"
   ]
